<!--編集画面-->
<h1>Editing Book</h1>

<!--エラー内容表示-->
<% if @book.errors.any? %>
    ※<%= @book.errors.count %> errors occurred.※
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<!--編集フォーム-->
<%= form_with model: @book do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Detail</h4>
    <%= f.text_area :body %>

    <!--アップデートボタン-->
    <%= f.submit 'Update Book' %>

<% end %>

<!--詳細画面(show.html.erb)にいくボタン-->
<span>
    <%= link_to 'Show', book_path(@book) %>
</span>

<!--一覧画面(index.html.erb)に戻るボタン-->
<span>
    <%= link_to 'Back', "/books" %>
</span>